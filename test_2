#include <iostream>
#include <string>
using namespace std;
int main()
{
    string text = "#include <iostream>\n"
                  " \n"
                  "int main() {\n"
                  "std::cout << \"Hello, World!\\n\" << std::endl;\n"
                  "return 0;\n"
                  "}";
    cout<<text;
   
}
2)
#include <iostream>
#include <string>
using namespace std;
int main ()
{
    system("chcp 65001");
    int k = 0;
    string previous;
    cin >> previous;
    string current;
    while (cin >> current) {
        ++k;
        if (previous == current)
            cout << "Position of the repeated word: " << k << endl;
    }
    return 0;
}
3)
#include <iostream>
using namespace std;
int main() {
    int a;
    cout<< "Enter a number:\n"; 
    cin >> a; // bin
    int b, c, m;
    b = 0;
    c = 0; // dec
    m = 1;
    while(a>0){
        b = a % 10;
        c = c + b * m;
        m = m * 2;
        a = a / 10;
    }
   cout << c << endl;
    return 0;
}
4)
#include <iostream>
using namespace std;
int main(){
    int a = 0, b = 0, r = 1; // a - dec, b - bin
    cout << "Enter a number:" << endl;
    cin >> a;
    while(a)
    {
        b += (a%2) * r;
        a = a / 2;
        r = r * 10;
    }
    cout << b;
    return 0;
}
